!!!5
%html
  %head
    %meta{ :charset=>'utf-8' }
    %title NodeJ: Node.JS for the JVM
    %meta{ :name=>'viewport', :content=>'width=device-width, initial-scale=1.0' }
    :css
      body {
        padding-top: 60px;
      }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"#{site.base_url}/stylesheets/styles.css" }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"#{site.base_url}/stylesheets/bootstrap.min.css" }
    /[if lt IE 9]
      %script{ :type=>'text/javascript', :src=>'http://html5shim.googlecode.com/svn/trunk/html5.js' }
    %script{ :type=>'text/javascript', :src=>'https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js' }
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %ul.nav
            %li
              %a.brand{ :href=>"/" } NodeJ
            %li
              %a{ :href=>"#{site.github}" } Source
            %li
              %a{ :href=>"#{site.github}/issues" } Issues
            %li
              %a{ :href=>"#{site.github}/wiki" } Wiki
            %li
              %a{ :href=>"#{site.base_url}/compatibility" } Node.js API Compatibility
    .container
      ~ content
    .container
      .well
        CI Build Status
        %p
          %a{:href=>'http://travis-ci.org/projectodd/nodej'}
            %img{:src=>'https://secure.travis-ci.org/projectodd/nodej.png',
                 :alt=>'Travis-CI Build Status'}
          %a{:href=>'https://buildhive.cloudbees.com/job/projectodd/job/nodej/'}
            %img{:src=>'https://buildhive.cloudbees.com/job/projectodd/job/nodej/badge/icon',
                 :alt=>'Cloudbees CI Build Status'}
      %hr
      %footer
        %p &copy; Project Odd #{Date.today.year}
