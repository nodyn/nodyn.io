doctype html
html
  head
    meta( charset='utf-8' )
    meta( http-equiv='X-UA-Compatible', content='IE=edge' )
    title 
      = title
    meta( name='viewport', content='width=device-width, initial-scale=1' )
    link( rel='stylesheet', type='text/css', href="/stylesheets/styles.css" )
    link( rel='stylesheet', type='text/css', href='/javascripts/highlight/styles/github.css' )
    script( src='/javascripts/highlight/highlight.pack.js' )
    script.
      hljs.initHighlightingOnLoad();
    link( rel="icon", type="image/x-icon", href="/favicon.ico" )

    // [if lt IE 9]
      script( src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js' )
      script( src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js' )

    script( src='https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js' )
  body
    a( href='https://github.com/nodyn/nodyn' )
      img( style='position: absolute; top: 50px; right: 0; border: 0; z-index:50', 
        src='https://camo.githubusercontent.com/a6677b08c955af8400f44c6298f40e7d19cc5b2d/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f677261795f3664366436642e706e67' 
        alt='Fork me on GitHub' 
        data-canonical-src='https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png' )
    .navbar.navbar-default( role='navigation' )
      .container-fluid
        .navbar-header
          button.navbar-toggle( type='button', data-toggle='collapse', data-target='.navbar-collapse' )
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand( href='/' ) Nodyn

        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a( href='/posts' ) Blog
            li
              a( href=github+'/issues' ) Issues
            li
              a( href=github+'/wiki' ) Wiki
            li
              a( href="/compatibility.html" ) API Compatibility
            li
              a(href='http://travis-ci.org/nodyn/nodyn')
                img(src='https://secure.travis-ci.org/nodyn/nodyn.png',
                     alt='Travis-CI Build Status')
    .container
      .row
        .col-md-8
          .post
            .meta
              h1
                != title
              h2
                != author
              h3
                != date
            .content
              != yield
              - if (current.source != 'index')
                != partial('_disqus')

        .col-sm-3.col-sm-offset-1.blog-sidebar
          .sidebar-module.sidebar-module-inset
            h4 About Nodyn
            .description.
              Nodyn is a Node.js compatible framework, running on
              the JVM powered by the DynJS Javascript runtime.
              This is our blog.

          .sidebar-module.archives
            h4 Archives
            ul
              for post, slug in public.posts._data
                if ( slug != 'index' )
                  li
                    a(href="/posts/#{ slug }")
                      = post.title 
                      .smaller 
                        = post.date


    .container
      footer.well
